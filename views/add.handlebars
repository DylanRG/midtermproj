<h1>Add a new Garage Sale</h1>
<article>
    <form method="POST" action="/api/addSale">
        <div class="input-field">
            <label>City:</label>
            <input type="text" name="city" size="50" placeholder="City">
        </div>
         <div class="input-field">
            <label>State:</label>
            <input type="text" name="state" size="50" placeholder="State">
        </div>
        <div class="input-field">
            <label>Number of Items:</label>
            <input type="text" name="numItems" size="50" placeholder="Number of Items (Number)">
        </div>
        <div class="input-field">
            <label>Address:</label>
            <input type="text" name="address" size="50" placeholder="Address"></textarea>
        </div>
        <div class="input-field">
            <label>Items:</label>
            <input type="text" name="items" size="50" placeholder="Items, Comma, Seperated"></textarea>
        </div>
        <button type="submit">Add new sale </button>
    </form>
</article>